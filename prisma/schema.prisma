generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Room {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  capacity Int
  bookings Booking[]
}

model Booking {
  id        Int      @id @default(autoincrement())
  date      DateTime
  startTime DateTime
  endTime   DateTime
  bookedBy  String
  roomId    Int
  room      Room     @relation(fields: [roomId], references: [id])
}
